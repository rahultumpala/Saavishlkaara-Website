                  | institution.
            .col-lg-2.col-sm-4.col-md-4
              .footer-widget.footer-link
                h4 About
                ul
                  li
                    a(href='/about') About
                  li
                    a(href='/our-team') Team
                  li
                    a(href='/blog') Blog
