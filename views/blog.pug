  body
    //Main Header start
    nav.navbar.navbar-expand-lg.fixed-top.trans-navigation
      .container
        img#logo-img.img-fluid.b-logo(src='images/logo.png' alt='')
        a.navbar-brand.d-flex.flex-row(href='/')
          img.img-fluid.b-logo(src='images/logo-text-18.png' alt='')
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#mainNav' aria-controls='mainNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
            i.fa.fa-bars
        #mainNav.collapse.navbar-collapse.justify-content-end
          ul.navbar-nav
            li.nav-item
              a.nav-link.dropdown-toggle(href='/') Home
            li.nav-item
              a.nav-link.smoth-scroll(href='/about') About
            li.nav-item
              a.nav-link.smoth-scroll(href='/courses') Courses
            li.nav-item
              a.nav-link.smoth-scroll(href='/our-team') Our Team
            li.nav-item
              a.nav-link.smoth-scroll(href='/blog') Blog
            li.nav-item
              a.nav-link.smoth-scroll(href='/contact') Contact
            li.nav-item
              a.nav-link.smoth-scroll(href='/campus-ambassadors') Campus Ambassadors
            if user
              li.nav-item
                a.nav-link.smoth-scroll(href="/user-profile" ) Profile    
            else
              li.nav-item
                a.nav-link.smoth-scroll(href='/auth') Login
    // MAIN HEADER AREA END
    // MAIN BANNER AREA START
    #page-banner.page-banner-area.page-contact
      .overlay.dark-overlay
      .container
        .row.justify-content-center
          .col-lg-8.m-auto.text-center.col-sm-12.col-md-12
            .banner-content.content-padding
              h1.text-white Blog
    // MAIN HEADER AREA END
    section.all-blogs.mx-5.my-5
      .blogs-cards-container.mb-5
        //- -var blog = { "status":'Saved Only', "title" : "sample Title", "slug" : "lorem-ipsum"  ,"firstPara" : "Lorem ipsum dolor, sit amet consectetur adipisicing elit. Atque aperiam at consectetur quasi dolor iste sequi! Sunt consectetur magni ipsam doloribus tenetur debitis optio, incidunt assumenda corporis porro accusantium reprehenderit!" ,"createdOn" : "22nd March 2019" ,"createdBy" : "John Durairaj" }
        if !noBlogs
          for blog in blogs
            a(href=`/blog/${blog.slug}`)
              .card.px-2.py-2.blog-card(data-slug=blog.slug)
                .d-flex.flex-row.justify-content-between.px-2.py-2
                  .side(style="width:100%")
                    h3.card-title #{blog.title} 
                    -var createdBy = blog.createdBy.firstName.toUpperCase() + " " + blog.createdBy.lastName.toUpperCase()
                    -var createdAt = blog.createdAt.toDateString()
                    h4.card-subtitle.mb-2.text-muted #{createdBy} , #{createdAt}  
                    .div(style="overflow: hidden;white-space: nowrap;text-overflow: ellipsis;max-width:55vw")
                      h6.card-text
                      | #{blog.firstPara}
        else 
          h2.my-5 No Blogs Written :(
